<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TranslucentTheme" parent="AppTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
    </style>


    <style name="title1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!-- 标题栏中央字体主题 18白色居中 -->
    <style name="text_titleBarCenter">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!-- 添加日志左侧栏字体主题 16浅色居左x20 -->
    <style name="text_worklog">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!-- 个人中心左侧栏字体主题 16浅色居左x20 -->
    <style name="text1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!-- 底部栏字体主题 12白色距上y10 -->
    <style name="text_buttom">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <!-- 底部栏icon主题 12白色距上y10 -->
    <style name="icon_buttom">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- 左侧栏icon  -->
    <style name="image1">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>
    <!-- 右侧栏next_icon  -->
    <style name="nextIm">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <!-- 业务管理title下划线  -->
    <style name="serviceTitleVw">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#303135</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <!-- 业务管理titleTv  -->
    <style name="serviceTitleTv">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>
    <!-- 业务管理titleBarRl  -->
    <style name="TitleBar">
        <item name="android:background">#393a3f</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>
    <!-- 日志填写spinner  -->
    <style name="log_spinner">
        <item name="android:background">@null</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:popupBackground">#666</item>
    </style>

    <style name="time_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
