<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#303135">
    <include
        layout="@layout/bar_back_title"/>
    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="0dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#a5a5af"
                    />
                <TextView
                    android:id="@+id/telTv"
                    android:text="  手机号"
                    android:gravity="right"
                    android:textColor="#666"
                    android:textSize="16sp"
                    android:layout_width="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    />

                <EditText
                    android:id="@+id/telEt"
                    android:hint="请输入手机号"
                    android:textColor="#333"
                    android:textColorHint="#ccc"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:layout_toRightOf="@id/telTv"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="0dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#a5a5af"
                    />
                <Button
                    android:id="@+id/vCodeBt"
                    android:text="获取验证码"
                    android:textColor="#333"
                    android:textColorHint="#ccc"
                    android:textSize="16sp"
                    android:background="@null"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />

                <EditText
                    android:id="@+id/vCodeEt"
                    android:hint="请输入验证码"
                    android:textColor="#333"
                    android:textColorHint="#ccc"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:layout_toLeftOf="@id/vCodeBt"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="0dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#a5a5af"
                    />
                <TextView
                    android:id="@+id/nowPwtv"
                    android:text="新密码"
                    android:gravity="right"
                    android:textColor="#666"
                    android:textSize="16sp"
                    android:layout_width="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    />

                <EditText
                    android:id="@+id/newPwEt"
                    android:hint="请输入新密码"
                    android:textColor="#ccc"
                    android:textColorHint="#ccc"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:layout_toRightOf="@id/nowPwtv"
                    android:password="true"
                    />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="30dp"
            >
            <Button
                android:id="@+id/forgetPwBt"
                android:text="确定"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#01A0F3"
                android:textColor="#fff"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>