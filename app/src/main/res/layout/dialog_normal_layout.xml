<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/dialog_rank"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#9e9e9e"
    android:layout_marginTop="0dp"
    android:alpha="0.75"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/closeIm"
        android:src="@drawable/u179"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/starIm2"
            android:src="@drawable/u182"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="0dp"
            />
        <ImageView
            android:id="@+id/starIm1"
            android:src="@drawable/u182"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@id/starIm2"
            android:layout_marginRight="30dp"
            />
        <ImageView
            android:id="@+id/starIm3"
            android:src="@drawable/u182"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/starIm2"
            android:layout_marginLeft="30dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/centerTv"
        android:text="您的得分 三颗星！"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="bottom"
    android:gravity="center"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/dialogBt1"
        android:background="#888"
        android:textColor="#fff"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="查看排名" />

    <Button
        android:id="@+id/dialogBt2"
        android:background="#fff"
        android:textColor="#666"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20.0dp"
        android:gravity="center"
        android:text="填写日志" />
</LinearLayout>
</LinearLayout>
