<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#303135">
    <include
        layout="@layout/bar_back_title"/>
    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="0dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#a5a5af"
                    />
                <TextView
                    android:id="@+id/oldPwtv"
                    android:text="  旧密码"
                    android:gravity="right"
                    android:textColor="#666"
                    android:textSize="16sp"
                    android:layout_width="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    />

                <EditText
                    android:id="@+id/oldPwEt"
                    android:hint="请输入旧密码"
                    android:textColor="#ccc"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:layout_toRightOf="@id/oldPwtv"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="0dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#a5a5af"
                    />
                <TextView
                    android:id="@+id/nowPwtv"
                    android:text="  新密码"
                    android:gravity="right"
                    android:textColor="#666"
                    android:textSize="16sp"
                    android:layout_width="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    />

                <EditText
                    android:id="@+id/newPwEt"
                    android:hint="请重置登录密码（6-12位）"
                    android:textColor="#ccc"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:layout_toRightOf="@id/nowPwtv"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="0dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#a5a5af"
                    />
                <TextView
                    android:id="@+id/now2Pwtv"
                    android:text="确认密码"
                    android:gravity="right"
                    android:textColor="#666"
                    android:textSize="16sp"
                    android:layout_width="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    />

                <EditText
                    android:id="@+id/new2PwEt"
                    android:hint="请再次输入新密码"
                    android:textColor="#ccc"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:layout_toRightOf="@id/now2Pwtv"
                    />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="30dp"
            >
            <Button
                android:id="@+id/changePwBt"
                android:text="确定"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#01A0F3"
                android:textColor="#fff"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>