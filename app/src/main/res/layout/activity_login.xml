<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/y100"
        android:padding="@dimen/x60"
        android:background="#fff">
        <ImageView
            android:id="@+id/iv_icon"
            android:src="@drawable/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y160"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_title"
            android:text="法律顾问"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y40"
            android:textColor="#000"
            android:textSize="23sp"
            android:typeface="monospace" />

        <RelativeLayout
            android:id="@+id/rl_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="@dimen/y200"
            android:background="@drawable/rectangle_edittext">

            <ImageView
                android:id="@+id/iv_userIconName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/y30"
                android:paddingLeft="@dimen/x60"
                android:paddingTop="@dimen/y30"
                android:src="@drawable/ic_edittextuname" />

            <View
                android:id="@+id/viewName"
                android:layout_width="@dimen/x2"
                android:layout_height="@dimen/y40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@id/iv_userIconName"
                android:background="#cccccc" />

            <EditText
                android:id="@+id/userNameEt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y60"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@id/viewName"
                android:background="@null"
                android:ems="19"
                android:hint="  用户名"
                android:textColorHint="#cccccc"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_unameClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x40"
                android:src="@drawable/ic_backspace_grey600_24dp"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_userPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_userName"
            android:layout_marginTop="@dimen/y2"
            android:background="@drawable/rectangle_edittext">

            <ImageView
                android:id="@+id/iv_userIconPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/y30"
                android:paddingLeft="@dimen/x60"
                android:paddingTop="@dimen/y30"
                android:src="@drawable/ic_edittextupwd" />

            <View
                android:id="@+id/viewPwd"
                android:layout_width="@dimen/x2"
                android:layout_height="@dimen/y40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@id/iv_userIconPwd"
                android:background="#cccccc" />

            <EditText
                android:id="@+id/passwordEt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y60"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@id/viewPwd"
                android:background="@null"
                android:drawablePadding="@dimen/x10"
                android:ems="19"
                android:hint=" 密码"
                android:inputType="textPassword"
                android:textColorHint="#cccccc"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_pwdClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x40"
                android:src="@drawable/ic_backspace_grey600_24dp"
                android:visibility="invisible" />

        </RelativeLayout>

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_userPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y40"
            android:background="#01A0F3"
            android:gravity="center"
            android:padding="@dimen/x20"
            android:text="登录"
            android:textColor="#fff"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/rememberPwCb"
            android:text="记住密码"
            android:textColor="#01A0F3"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginBtn"
            android:layout_alignLeft="@id/loginBtn"
            android:layout_marginTop="@dimen/y40"
            android:background="@null"
            android:checked="false"
            android:duplicateParentState="false"/>

        <TextView
            android:id="@+id/forgetPwTv"
            android:text="忘记密码"
            android:textColor="#01A0F3"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginBtn"
            android:layout_alignRight="@id/loginBtn"
            android:layout_marginTop="@dimen/y40"
            />
    </RelativeLayout>

</RelativeLayout>