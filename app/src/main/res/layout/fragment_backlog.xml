<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <!-- 头 -->
    <LinearLayout
        android:id="@+id/titlelBarRl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:background="#393a3f"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/backlogLeftRl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp">
            <View
                android:id="@+id/backlogLeftVw"
                android:background="#01a0f3"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/backlogLeftTv"
                android:text="未查看"
                android:textSize="18sp"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_above="@id/backlogLeftVw"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/backlogRightRl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp">
            <View
                android:id="@+id/backlogRightVw"
                android:background="#303135"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/backlogRightTv"
                android:text="已查看"
                android:textSize="18sp"
                android:textColor="#666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_above="@id/backlogRightVw"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/backlogLv"
        android:layout_marginTop="2dp"
        android:background="#EBEBEB"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titlelBarRl"
        android:layout_above="@id/bottomBarRl"
        android:dividerHeight="1dp"/>

</LinearLayout>